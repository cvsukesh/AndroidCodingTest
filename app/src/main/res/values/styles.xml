<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/wl_dark_blue</item>
        <item name="colorPrimaryDark">@color/wl_dark_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="wl_typeface_roboto_bold">
        <item name="menu_one_typeface">roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wl_typeface_roboto_regular">
        <item name="menu_one_typeface">roboto_regular</item>
    </style>

    <style name="wl_typeface_roboto_medium">
        <item name="menu_one_typeface">roboto_medium</item>
    </style>

    <style name="wl_roboto_h1_black_bold" parent="wl_typeface_roboto_bold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="bc_roboto_h1_black" parent="wl_typeface_roboto_regular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="bc_roboto_h2_black" parent="wl_typeface_roboto_medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="bc_roboto_h2_white" parent="wl_typeface_roboto_medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="bc_roboto_h2_white_bold" parent="wl_typeface_roboto_bold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="common_toolbarStyle">
        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorSecondary">@color/abc_primary_text_material_light</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
